            android:name="com.androidle.androidle.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidle.androidle.AddAccount"
            android:label="@string/title_activity_add_account"
            android:parentActivityName="com.androidle.androidle.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidle.androidle.MainActivity" />
        </activity>
        <activity
            android:name="com.androidle.androidle.SelectAccount"
            android:label="@string/title_activity_select_account"
