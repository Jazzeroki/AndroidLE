            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidle.androidle.MainActivity" />
        </activity>
        <activity
            android:name="com.androidle.androidle.AccountSelection"
            android:label="@string/title_activity_account_selection"
